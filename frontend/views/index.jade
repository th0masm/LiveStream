doctype html
html
    head
        meta(charset='utf8')

        base(href='/')
        title OffBikes Live
        link(rel='stylesheet', href='/components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet', href='/components/test/style.css')
        link(rel='stylesheet', href='/components/font-awesome/css/font-awesome.css')
        script(src='/components/jquery/jquery.js')
        script(src='/components/bootstrap/dist/js/bootstrap.js')
        script(src='/components/angular/angular.js')
        script(src='/components/angular-animate/angular-animate.js')
        script(src="/components/socket.io-client/dist/socket.io.js")
        script(src="/javascripts/twitter/twitterws.js")
        script(src='/javascripts/twitter/app.js')

    body
        .navbar.navbar-default.navbar-static-top(role='navigation')
          .container
              .navbar-header
                button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
                a.navbar-brand(href='#') #{title}
              .navbar-collapse.collapse
                ul.nav.navbar-nav
                  - var obj = { 'home':'Home', 'about':'About' }
                    - each val, key in obj
                      - if (id == key)
                        li.active
                          a(href='#{key}') #{val}
                      - else            
                        li
                          a(href='#{key}') #{val}
        block content
            div.container
                div.jumbotron
                    div.row
                        div.span10
                            div(ng-app="twitter", ng-controller="ctrlTwitter", ng-init="searchTwitter()")
                                ul
                                  li(class=['animate-repeat'], ng-repeat="tweet in tweets")
                                    {{tweet.text.text}}
                hr                       
                footer
                    p OffBikes.com